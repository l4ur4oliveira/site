---
title: "My Page"
layout: default
---

<header class="header">
	<%- @partial('nav') %>

	<img class="photo" src="<%= @author.photo %>" width="150" alt="<%= @author.name %>">
	
	<h1 class="name"><%= @author.name %></h1>
	
	<p class="introduction">
		<%= @author.description %>
	</p>
	
</header>

<% for section in @sections : %>

	<section class="container page-section" id="<%= section %>">
		<%- @partial("sections/#{section}.html.eco", @) %>
	</section>

<% end %>